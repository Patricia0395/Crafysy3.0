<!DOCTYPE html>
<html lang="es">
    <%- include('./partials/head',{title : 'Detalle de producto'}) %> 

<body class="detail">
    <%- include('./partials/header') %> 

    <main>
        <div class="box-detail">
            <div class="box-images">
                <div class="box-images-min">
                    <img id="img-prev1" src="/images/img-phone-01.jpg" alt="">
                    <img id="img-prev2" src="/images/img-phone-02.jpg" alt="">
                    <img id="img-prev3" src="/images/img-phone-03.jpg" alt="">
                </div>
                <div class="img-principal">
                    <img id="img-main" src="/images/img-phone-01.jpg" alt="">
                </div>
            </div>
            <div class="box-content">
                <h2><%= product.name %></h2>
                <p><%= product.description %></p>
                <h3>$ <%= product.price %></h3><span><%= product.discount %>% OFF</span>
                <hr>
                <h5>Caracteristicas</h5>
                <div class="features">
                    <ul>
                        <% product.features.forEach(feature => { %>
                            <li><%= feature %></li>
                        <% }) %>
                    </ul>
                </div>
            </div>
            <div class="box-products">
                <h4>Productos relacionados</h4>
                <div class="glider-contain">
                    <div class="glider">
                      <div class="item-carousel"><img src="/images/img-phone-01.jpg" alt=""></div>
                      <div class="item-carousel"><img src="/images/img-phone-02.jpg" alt=""></div>
                      <div class="item-carousel"><img src="/images/img-phone-03.jpg" alt=""></div>
                      <div class="item-carousel"><img src="/images/img-phone-01.jpg" alt=""></div>
                      <div class="item-carousel"><img src="/images/img-phone-02.jpg" alt=""></div>
                      <div class="item-carousel"><img src="/images/img-phone-03.jpg" alt=""></div>
                      <div class="item-carousel"><img src="/images/img-phone-01.jpg" alt=""></div>
                      <div class="item-carousel"><img src="/images/img-phone-02.jpg" alt=""></div>
                      <div class="item-carousel"><img src="/images/img-phone-03.jpg" alt=""></div>
                      <div class="item-carousel"><img src="/images/img-phone-01.jpg" alt=""></div>
                      <div class="item-carousel"><img src="/images/img-phone-02.jpg" alt=""></div>
                      <div class="item-carousel"><img src="/images/img-phone-03.jpg" alt=""></div>
                    </div>
                    <button aria-label="Previous" class="glider-prev">«</button>
                    <button aria-label="Next" class="glider-next">»</button>
<!--                     <div role="tablist" class="dots" id="dots"></div>
 -->                  </div>
            </div>
        </div>
   </main>
   <%- include('./partials/scripts') %> 
    <script src="/javascripts/glider.js"></script>
    <script src="/javascripts/productDetail.js"></script>
</body>
</html>